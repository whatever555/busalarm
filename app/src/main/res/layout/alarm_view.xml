<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBack">

    <TableLayout
        android:id="@+id/top_sticky_label"
        style="@style/stickyTableLayoutHeading">
        <TableRow>
            <TextView
                style="@style/h1_sticky"
                android:text="Schedule notifications" />
        </TableRow>
    </TableLayout>

    <ScrollView
        android:id="@+id/addAlarmScreen"
        style="@style/mainScroll">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout style="@style/basicTableLayoutContent">
                <!-- Row 1 with single column -->
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="20dp"></TableRow>
                <!-- Row 2 with 2 columns -->
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/buttonText">

                    <EditText
                        android:id="@+id/name"
                        style="@style/editText"
                        android:layout_height="@dimen/buttonHeight"
                        android:hint="Notification name"
                        android:padding="7dp"
                        android:textSize="22sp"></EditText>
                </TableRow>
            </TableLayout>


            <TableLayout style="@style/basicTableLayoutHeading">

                <TableRow>

                    <TextView
                        style="@style/h1"
                        android:text="Stop ID:" />
                </TableRow>

            </TableLayout>

            <View style="@style/basicDivider"></View>

            <TableLayout style="@style/basicTableLayoutContent">

                <TableRow>

                    <EditText
                        android:id="@+id/stop_number"
                        style="@style/editText"
                        android:layout_span="6"
                        android:text="123"
                        android:textSize="22sp"></EditText>

                    <Button
                        android:id="@+id/stop_search_button"
                        style="@style/basicButton"
                        android:layout_gravity="right"
                        android:paddingLeft="40dp"
                        android:paddingRight="40dp"
                        android:layout_span="6"
                        android:text="Search..."/>

                </TableRow>
            </TableLayout>


            <TableLayout style="@style/basicTableLayoutHeading">
                <TableRow>
                    <TextView
                        style="@style/h1"
                        android:text="Notify me for.." />
                </TableRow>
            </TableLayout>

            <View style="@style/basicDivider"></View>

            <TableLayout style="@style/basicTableLayoutContent">

                <TableRow>
                    <EditText
                        android:id="@+id/alarm_duration"
                        style="@style/editText"
                        android:layout_span="5"
                        android:inputType="number"
                        android:layout_gravity="right"
                        android:text="15"></EditText>

                    <TextView
                        style="@style/basicText"
                        android:layout_span="7"
                        android:layout_gravity="left"
                        android:text="minutes:"
                        android:textSize="20sp" />

                </TableRow>
            </TableLayout>


            <TableLayout style="@style/basicTableLayoutHeading">
                <TableRow>
                    <TextView
                        style="@style/h1"
                        android:text="Route(s) to track:" />
                </TableRow>
                <TableRow>
                    <TextView
                        style="@style/basicText"
                        android:layout_span="12"
                        android:layout_gravity="center"
                        android:text="(Leave blank for all routes)"
                        android:textSize="12sp" />
                </TableRow>

            </TableLayout>
            <View style="@style/basicDivider"></View>

            <TableLayout style="@style/basicTableLayoutContent">

                <TableRow>

                    <Button
                        android:id="@+id/route1_button"
                        style="@style/basicButton"
                        android:layout_span="4"
                        android:layout_gravity="left"
                        android:text="select"
                        />

                    <Button
                        android:id="@+id/route2_button"
                        style="@style/basicButton"
                        android:layout_gravity="center"
                        android:text="select"
                        android:layout_span="4"/>

                    <Button
                        android:id="@+id/route3_button"
                        style="@style/basicButton"
                        android:layout_span="4"
                        android:text="select"
                        android:layout_gravity="right"/>
                </TableRow>
            </TableLayout>




            <TableLayout style="@style/basicTableLayoutHeading">

                <TableRow>

                    <TextView
                        style="@style/h1"
                        android:text="Scheduled time for notifications" />
                </TableRow>

            </TableLayout>
            <View style="@style/basicDivider"></View>

            <TableLayout style="@style/basicTableLayoutContent">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:gravity="center_vertical">

                    <NumberPicker
                        android:id="@+id/hrs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_span="4" />

                    <NumberPicker
                        android:id="@+id/mins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_span="4" />

                    <ToggleButton
                        android:id="@+id/ampm"
                        style="@style/basicButton"
                        android:layout_span="4"
                        android:height="25dp"
                        android:textOff="AM"
                        android:textOn="PM" />
                </TableRow>
            </TableLayout>




            <TableLayout style="@style/basicTableLayoutHeading">

                <TableRow>

                    <TextView
                        style="@style/h1"
                        android:text="Days:" />
                </TableRow>

            </TableLayout>
            <View style="@style/basicDivider"></View>

            <TableLayout style="@style/basicTableLayoutContent">

                <TableRow>

                    <com.dpro.widgets.WeekdaysPicker
                        android:id="@+id/weekdays"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="12"
                        android:padding="5dp"
                        custom:background_color="#565657"
                        custom:highlight_color="@color/positiveGreen"
                        custom:sunday_first_day="true"
                        custom:text_color="#111112" />
                </TableRow>
            </TableLayout>

            <TableLayout style="@style/basicTableLayoutHeading">
                <TableRow>

                    <TextView
                        style="@style/h1"
                        android:text="Repeat:" />
                </TableRow>
            </TableLayout>
            <View style="@style/basicDivider"></View>

            <TableLayout
                style="@style/repeatButtonHolder">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:gravity="center_vertical">

                    <ToggleButton
                        android:id="@+id/repeat_toggle"
                        style="@style/basicToggle"
                        android:layout_span="12"
                        android:height="25dp"
                        android:textOff="Off"
                        android:textOn="On" />
                </TableRow>
            </TableLayout>

            <TableLayout style="@style/basicTableLayoutHeading">
                <TableRow>
                    <TextView
                        style="@style/h1"
                        android:text="Send notification:" />
                </TableRow>
            </TableLayout>

            <View style="@style/basicDivider"></View>

            <TableLayout style="@style/basicTableLayoutContent">

                <TableRow>

                    <EditText
                        android:id="@+id/notification_prelay"
                        style="@style/editText"
                        android:layout_gravity="right"
                        android:layout_span="3"
                        android:inputType="number"
                        android:text="5" />

                    <TextView
                        style="@style/basicText"
                        android:layout_gravity="left"
                        android:layout_span="9"
                        android:text="minutes before arrival:"
                        android:textSize="20sp" />
                </TableRow>
            </TableLayout>


            <TableLayout
                style="@style/stickyTableLayoutFooter"
                android:paddingTop="0dp">

                <TableRow>

                    <Button
                        android:id="@+id/cancel_button"
                        style="@style/cancelButton"
                        android:layout_gravity="left"
                        android:layout_span="4"
                        android:text="Close" />

                    <Button
                        android:id="@+id/delete_button"
                        style="@style/deleteButton"
                        android:layout_gravity="center"
                        android:layout_span="4"
                        android:text="Delete" />

                    <Button
                        android:id="@+id/save_button"
                        style="@style/saveButton"
                        android:layout_gravity="right"
                        android:layout_span="4"
                        android:text="Save" />
                </TableRow>
            </TableLayout>

        </LinearLayout>


    </ScrollView>


</RelativeLayout>