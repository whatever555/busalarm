<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogAnimations" />

    <!-- SCROLL BARS -->


    <!-- TABLES -->
    <style name="basicTableLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shrinkColumns">*</item>
        <item name="android:stretchColumns">*</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">28dp</item>
    </style>

    <style name="basicTableLayoutContent" parent="basicTableLayout">
        <item name="android:paddingBottom">48dp</item>
    </style>

    <style name="basicTableLayoutHeading" parent="basicTableLayout">
        <item name="android:paddingTop">22dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:background">#EEF</item>
        <item name="android:textColor">#334</item>

    </style>

    <style name="stickyTable" parent="basicTableLayout">
        <item name="android:background">#334</item>
        <item name="android:color">#DfDFeF</item>
        <item name="android:textColor">#EEF</item>
    </style>

    <style name="stickyTableLayoutHeading" parent="stickyTable">
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingTop">40dp</item>
    </style>

    <style name="stickyTableLayoutFooter" parent="stickyTable">
        <item name="android:padding">8dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <!-- BUTTONS -->
    <style name="basicButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">#778</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#EEEEFE</item>
        <item name="android:color">#EEEEFE</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="saveButton" parent="basicButton">
        <item name="android:background">#4a4</item>
    </style>

    <style name="deleteButton" parent="basicButton">
        <item name="android:background">#a44</item>
    </style>

    <style name="cancelButton" parent="basicButton">
        <item name="android:background">#aaf</item>
    </style>

    <!--TOGGLES -->

    <style name="basicToggle" parent="basicButton">
    </style>


    <!-- TEXT -->
    <style name="basicText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#777779</item>
        <item name="android:typeface">monospace</item>
        <item name="android:gravity">center_vertical</item>

    </style>


    <style name="editText" parent="basicText">
        <item name="android:gravity">center</item>
        <item name="android:padding">7dp</item>
        <item name="android:textSize">22sp</item>
    </style>


    <!-- HEADINGS -->
    <style name="headerText" parent="basicText">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="h1" parent="@style/headerText">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_span">12</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textColor">#557</item>
        <item name="android:color">#557</item>
    </style>

    <style name="sub_h1" parent="@style/headerText">
        <item name="android:textSize">12sp</item>
    </style>


    <style name="h1_sticky" parent="@style/h1">
        <item name="android:textColor">#FEE</item>
        <item name="android:textSize">22dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:color">#FEE</item>
    </style>

    <style name="h2" parent="headerText">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_span">12</item>
    </style>

    <style name="mainScroll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fillViewport">true</item>
        <item name="android:background">#f3f3FE</item>
        <item name="android:padding">12dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_below">@id/top_sticky_label</item>
    </style>

    <style name="basicDivider" parent="basicDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_span">12</item>
        <item name="android:background">#e0e0Fd</item>
    </style>


</resources>
