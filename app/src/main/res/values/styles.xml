<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogAnimations" />

    <style name="basic">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- SCROLL BARS -->
    <style name="mainScroll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fillViewport">true</item>
        <item name="android:background">#f3f3FE</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_below">@id/top_sticky_label</item>
    </style>
    <style name="paddedContent" parent="basic">
        <item name="android:padding">12dp</item>
    </style>

    <style name="basicDivider" parent="basicDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_span">12</item>
        <item name="android:background">#e0e0Fd</item>
    </style>

    <!-- MODIFIERS -->
    <style name="noPadding" parent="basicTableLayout">
        <item name="android:padding">0dp</item>
    </style>
</resources>
