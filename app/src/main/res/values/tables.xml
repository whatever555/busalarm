<resources>
    <!-- TABLES -->
    <style name="basicTableLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shrinkColumns">*</item>
        <item name="android:stretchColumns">*</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">28dp</item>
    </style>

    <style name="basicTableLayoutContent" parent="basicTableLayout">
        <item name="android:paddingBottom">48dp</item>
    </style>

    <style name="repeatButtonHolder" parent="basicTableLayoutContent">
    <item name="android:paddingTop">2dp</item>
    </style>

    <style name="basicTableLayoutHeading" parent="basicTableLayout">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:background">#EEF</item>
        <item name="android:textColor">#334</item>
    </style>

    <style name="stickyTable" parent="basicTableLayout">
        <item name="android:background">#334</item>
        <item name="android:color">#DfDFeF</item>
        <item name="android:textColor">#EEF</item>
    </style>

    <style name="stickyTableLayoutHeading" parent="stickyTable">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">20dp</item>
    </style>

    <style name="stickyTableLayoutFooter" parent="stickyTable">
        <item name="android:padding">8dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

</resources>